<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" type="text/css" rel="stylesheet" />
     <script src="~/Scripts/jquery-1.8.2.js"></script>
     <script type="text/javascript">
         function init() {
             if (document.getElementById("profile_login").textContent != "")
                 document.getElementById("profile_input").value = document.getElementById("profile_login").textContent;
             else
                 document.getElementById("profile_input").value = "LogIn";
         }
</script>
</head>
<body>
  <div id="header"> 
       <div  style="float:right;padding-top: 1.3em">
         @using (Html.BeginForm("Logout","Pokemon"))
               {
                <input class ="actionButtons" type="submit" value="LogOut" />
               }
            </div>
      
      <div style="float:right;padding-top: 1.3em;padding-left:.9em">
            @using (Html.BeginForm("UserProfile","User"))
               {
                 <input id="profile_input"  class ="actionButtons" type="submit" value="@HttpContext.Current.User.Identity.Name" />
               }
          <span id="profile_login" style="visibility:hidden">@HttpContext.Current.User.Identity.Name</span>
          <script>init()</script>
        </div>
       <div  style="float:right;padding-top: 1.65em">
          @Html.ActionLink("News", "News", "Pokemon", new { }, new { @class="title_link"})
      </div>
        <div class="title">@Html.ActionLink("PokemonGoStore", "List", "Pokemon", new {page=1 }, new {@class = "title_link" })</div>
   </div>

    
         <div id="content">@RenderBody()</div> 
  
</body>
</html>
